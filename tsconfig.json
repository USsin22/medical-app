{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["vitest/globals"],
    "baseUrl": "."
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"]
}
